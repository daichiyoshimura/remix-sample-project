{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"postcss.config.cts",
		"app/.server/util/env.ts",
		"app/.server/util/form.ts",
		"app/.server/util/httpHandler.ts",
		"app/.server/util/index.tsx",
		"app/.server/api/participant.ts",
		"app/.server/api/room.ts",
		"app/.server/api/index.tsx"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["@remix-run/node", "vite/client", "vitest/globals"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ES2022",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@*": ["./app/*"],
			"@server/*": ["./app/.server/*"]
		},
		"noEmit": false
	}
}
