{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "all",
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"sortImports": true,
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"^@storybook/(.*)$",
		"^@testing-library/react$",
		"^@remix-run/(.*)$",
		"^@mui/icons-material$",
		"^@hooks$",
		"^@hooks/(.*)$",
		"^@api$",
		"^@util$",
		"^@styles$",
		"^@actions$",
		"^@actions/(.*)$",
		"^@loaders$",
		"^@loaders/(.*)$",
		"^@components$",
		"^@features$",
		"^@(.*)/(.*)$",
		"^[./]"
	]
}
