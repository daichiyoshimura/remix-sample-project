{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "all",
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"sortImports": true,
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"^@remix-run/(.*)$",
		"^@hooks/(.*)$",
		"^@actions/(.*)$",
		"^@loaders/(.*)$",
		"^@(.*)/(.*)$",
		"^[./]"
	]
}
